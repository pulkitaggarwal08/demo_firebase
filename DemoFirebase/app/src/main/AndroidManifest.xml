<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo_firebase.pulkit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".authrization.SignInActivity" />
        <activity android:name=".authrization.RegisterUserActivity" />
        <activity android:name=".authrization.ForgotPasswordActivity"/>
        <activity android:name=".DashboardActivity"/>
        <activity android:name=".activities.ChatActivity"/>
        <activity android:name=".activities.Test"/>



    </application>

</manifest>